@model IEnumerable<Magic_UI.Models.list_student>

@{
    ViewBag.Title = "StudentDetail";
}

<h2>Student Detail</h2>


@using (Html.BeginForm("Index", "Student", FormMethod.Get))
{
    <p>
        Find by District : @Html.DropDownList("district", (IEnumerable<SelectListItem>)ViewBag.District, "Select District")
        <input type="submit" value="Search" />
    </p>
}


<table class="table">
    <tr>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Date Of Birth
        </th>
        <th>
            SSN
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @string.Format("{0:MMM/dd/yyyy}", Convert.ToDateTime(Html.DisplayFor(modelItem => item.DateOfBirth).ToString()))
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ssn)
            </td>
        </tr>
    }

</table>
